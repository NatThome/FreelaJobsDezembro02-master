<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nathy.freelajobs.freelajobs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.CadastroEmpresaActivity" />
        <activity android:name=".activity.CadastroUsuarioActivity" />
        <activity android:name=".activity.EditarCadastroEmpresaActivity" />
        <activity android:name=".activity.VagaActivity" />
        <activity
            android:name=".activity.FeedEmpresaActivity"
            android:label="@string/title_activity_feed_empresa"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.EditarCadastroUsuarioActivity" />
        <activity android:name=".activity.CadastrarVagaActivity" />
        <activity
            android:name=".activity.UsuarioFeedActivity"
            android:label="@string/title_activity_usuario_feed"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.FeedVagasActivity"></activity>
    </application>

</manifest>